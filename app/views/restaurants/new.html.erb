<h1> Add a new restaurant! </h1>

<%= form_for @restaurant do |f| %>

<%= render partial: 'layouts/error', locals: {object: @restaurant}%>

  <p>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <div>
    </div>
    <%= f.label :hours%>
    <%= f.text_field :hours%>
    <div>
    </div>
    <%=f.label :discount%>
    <%= f.text_field :discount%>
    <div>
    </div>
    <%=f.label :additional_info%>
    <%= f.text_field :additional_info%>
    <div>
    </div>
    Long or short layover?
    <div>
    </div>
    <%= f.select :long_or_short_layover, ['Long', 'Short']%>
    <div>
    </div>
    What will this cost?
    <div>
    </div>
    <%= f.select :price_point, ['Newhire Pay', 'Ten Year Pay', 'Topout Pay']%>
    <div>
    </div>
    <label> Select the layover city:</label>
    <%= f.collection_select :city_id, City.all, :id, :name, prompt: true %>
     <div>
    </div>
    <label>Dont see your layover? <%= link_to "Add it here first!", new_city_path %></label>
    <div>
    </div>
    <%= f.submit %>
  </p>
<% end %> 
